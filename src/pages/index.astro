---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Footer.astro';
import { Image } from 'astro:assets';
import mig from "../assets/images/mig.webp";

---

<MainLayout>
  <section class="flex flex-col items-center justify-center h-screen text-center relative">
    <div class="flex flex-col items-center">
      <!-- Juster størrelsen på billedet her -->
      <img src={mig.src} alt="mig" class="w-32 h-auto" />
      
      <div class="mt-5">
        <a 
          href="/about" 
          class="block text-lg text-black my-1 transition duration-300 ease-in-out transform hover:text-[#1100FF] hover:scale-105 hover:underline"
        >
          ( about )
        </a>
        <a 
          href="/projects" 
          class="block text-lg text-black my-1 transition duration-300 ease-in-out transform hover:text-[#1100FF] hover:scale-105 hover:underline"
        >
          ( projekter )
        </a>
      </div>
    </div>
  </section>
</MainLayout>
